<Window x:Class="tspAuto.Notification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tspAuto"
        mc:Ignorable="d"
        Title="Notification" Height="150" Width="300" Loaded="Window_Loaded" AllowsTransparency="True" WindowStyle="None" MouseEnter="Window_MouseEnter" MouseLeave="Window_MouseLeave" LostFocus="Window_LostFocus"
        Topmost="True">
    <Grid>
        <Button x:Name="btnClose" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="60" Click="btnClose_Click" Height="40"/>
        <TextBlock x:Name="txtMessage" Height="100" Margin="10,40,10,0" VerticalAlignment="Top" TextWrapping="Wrap" />
        <Label x:Name="lblTitle" Content="Title" HorizontalAlignment="Left" Margin="36,5,0,0" VerticalAlignment="Top" Width="198"/>
        <Image HorizontalAlignment="Left" Height="16" Margin="10,10,0,0" VerticalAlignment="Top" Width="16" RenderTransformOrigin="0.193,0.153" Source="favicon.ico"/>
    </Grid>
</Window>
